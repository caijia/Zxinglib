<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/color_7bF40D0D" />
            <corners android:radius="2dp" />
            <stroke android:width="1dp"  android:color="@color/color_F40D0D" />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape>
            <solid android:color="@color/color_7bF40D0D" />
            <corners android:radius="2dp" />
            <stroke android:width="1dp"  android:color="@color/color_F40D0D" />
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="@color/color_F40D0D" />
            <corners android:radius="2dp" />
            <stroke android:width="1dp" android:color="@color/color_F40D0D" />
        </shape>
    </item>
</selector>